@model RegisterViewModel

<form asp-controller="Auth" asp-action="Register" method="post">
    <label style="background-color:red;">@ViewBag.Message</label>
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>Username</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label>MobilePhone</label>
        <input asp-for="MobilePhone" />
        <span asp-validation-for="MobilePhone"></span>
    </div>
    <div>
        <label>Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label>LastName</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label>StreetAddress</label>
        <input asp-for="StreetAddress" />
        <span asp-validation-for="StreetAddress"></span>
    </div>
    <div>
        <button type="submit">Sign Up</button>
    </div>
    <a asp-controller="Auth" asp-action="Login"
   asp-route-returnUrl="@Model.ReturnUrl">Back to Login</a>
</form>
    
